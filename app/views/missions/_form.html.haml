= form_for @mission do |f|
  - if @mission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mission.errors.count, "error")} prohibited this mission from being saved:"
      %ul
        - @mission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :server
    = f.select :server, @servers
  .field
    = f.label :faction
    = f.select :faction, ["VS", "NC", "TR"]
  .actions
    = f.submit 'Save'
